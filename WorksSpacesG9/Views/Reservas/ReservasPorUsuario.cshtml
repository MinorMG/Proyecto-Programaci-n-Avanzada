@model IEnumerable<WorksSpacesG9.Reservas>

@{
    ViewBag.Title = "ReservasPorUsuario";
}
<div class="justify-content-center py-4">
    <h2>Bienvenido @ViewBag.UsuarioNombre</h2>
    <h3>Tus reservas</h3>
</div>
<table class="table table-striped table-hover table-borderless">
    <tr style="background-color:lightslategrey">
        <th class="text-white">
            Fecha Reserva
        </th>
        <th class="text-white">
           Hora de Inicio
        </th>
        <th class="text-white">
            Hora Final
        </th>
        <th class="text-white">
            Estado
        </th>
        <th class="text-white">
            Sala
        </th>
        <th class="text-white">
            Nombre Usuario
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @String.Format("{0:dd-MM-yyyy}", item.fecha_reserva)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hora_inicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hora_fin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.aprobacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salas_reunion.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Usuarios.nombre)
        </td>
        <td>
            @if (item.fecha_reserva >= DateTime.Now.Date)
            {
            @Html.ActionLink("Editar", "editarReservaUsuario", new { id = item.id_reserva }, new { @class = "btn btn-outline-success mx-4" }) 
            @Html.ActionLink("Eliminar", "Eliminar", new { id = item.id_reserva }, new { @class = "btn btn-outline-danger" })
    } 
    </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Regresar", "Index","Home", new { }, new { @class = "btn btn-outline-primary mx-4" })
</div>

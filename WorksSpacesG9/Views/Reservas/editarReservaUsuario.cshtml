@model WorksSpacesG9.Reservas

@{
    ViewBag.Title = "editarReservaUsuario";
}

<h2 class="text-center">Editar Reserva</h2>
<div class="container d-flex justify-content-center">
    <div class="justify-content-center" style="max-width: 600px;">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.id_reserva)


                <div class="form-group">
                    Fecha Reserva
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.fecha_reserva, new { htmlAttributes = new { @class = "form-control" , type="date"} })
                        @Html.ValidationMessageFor(model => model.fecha_reserva, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Hora Inicio
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.hora_inicio, new { htmlAttributes = new { @class = "form-control", type = "time" } })
                        @Html.ValidationMessageFor(model => model.hora_inicio, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Hora Fin
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.hora_fin, new { htmlAttributes = new { @class = "form-control", type = "time" } })
                        @Html.ValidationMessageFor(model => model.hora_fin, "", new { @class = "text-danger" })
                    </div>
                </div>

                @Html.HiddenFor(model => model.id_reserva)
                @Html.HiddenFor(model => model.id_usuario)
                @Html.HiddenFor(model => model.id_sala)
                @Html.HiddenFor(model => model.aprobacion)



                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10 my-4">
                        <input type="submit" value="Guardar Cambios" class="btn btn-outline-primary" />
                    </div>
                    <div class=" djustify-content-center my-4">
                        @Html.ActionLink("Regresar", "ReservasPorUsuario", "Reservas", new { id = ViewBag.UserId }, new { @class = "btn btn-outline-danger" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>





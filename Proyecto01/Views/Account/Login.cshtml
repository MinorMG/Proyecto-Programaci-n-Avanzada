@using Proyecto01.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar Sesión";
}

<main aria-labelledby="title" class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header text-white text-center" style="background-color:lightslategray">
                    <h3 class="mb-0">@ViewBag.Title</h3>
                </div>
                <div class="card-body p-4 justify-content-center">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <h5 class="text-center mb-4">Inicia sesión con tu cuenta</h5>
                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Ingresa tu correo electrónico" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Ingresa tu contraseña" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-check mb-3">
                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                           ¿Recordarme?
                        </div>

                        <div class="d-grid">
                            <input type="submit" value="Iniciar sesión" class="btn btn-block text-white"  style="background-color:lightslategray"/>
                        </div>
                    }

                    <hr class="my-4" />
                    <p class="text-center mb-1">
                        ¿No tienes cuenta? @Html.ActionLink("Regístrate aquí", "Register", null, new { @class = "link-dark" })
                    </p>
                    <p class="text-center">
                        <a href="@Url.Action("ForgotPassword", "Account")" class="link-secondary">¿Olvidaste tu contraseña?</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

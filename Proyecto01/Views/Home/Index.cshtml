<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menú Vertical con Cards</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

    <style>
        body {
            background-image: url('https://gesab.com/wp-content/uploads/2023/08/Meeting-room-Guide-GESAB-10.webp'); 
            background-size: cover;
            background-position: center; 
            background-repeat: no-repeat; 
            min-height: 100vh; 
        }


        .card {
            background-color: rgba(255, 255, 255, 0.7); 
            border: none; 
            color: black; 
        }


            .btn-outline-light:hover {
                background-color: rgba(255, 255, 255, 0.2); 
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <h2 class="mb-4 text-center">Menú Principal</h2>

                @using Microsoft.AspNet.Identity

                @if (User.IsInRole("Admin"))
                {
                    <div class="card mb-3 text-center">
                        <div class="card-body">
                            <h5 class="card-title">Gestión Salas</h5>
                            <p class="card-text">Administra las salas de reuniones disponibles.</p>
                            @Html.ActionLink("Ir a Gestión", "GestionSalas", "Salas", null, new { @class = "btn btn-outline-dark" })
                        </div>
                    </div>
                    <div class="card mb-3 text-center">
                        <div class="card-body">
                            <h5 class="card-title">Gráficos</h5>
                            <p class="card-text">Visualiza estadísticas y gráficos de uso de salas.</p>
                            @Html.ActionLink("Ver Gráficos", "Graficos", "Estadisticas", null, new { @class = "btn btn-outline-dark" })
                        </div>
                    </div>
                    <div class="card mb-3 text-center">
                        <div class="card-body">
                            <h5 class="card-title">Reservas Totales</h5>
                            <p class="card-text">Visualiza todas las estadisticas de los usuarios.</p>
                            @Html.ActionLink("Ver Reservas", "listaReservas", "Reservas", null, new { @class = "btn btn-outline-dark" })
                        </div>
                    </div>
                   
                }

                <div class="card mb-3 text-center">
                    <div class="card-body">
                        <h5 class="card-title">Salas Disponibles</h5>
                        <p class="card-text">Consulta las salas disponibles para reservar.</p>
                        @Html.ActionLink("Ver Salas", "SalasDisponibles", "Salas", null, new { @class = "btn btn-outline-dark" })
                    </div>
                </div>

                @if (Request.IsAuthenticated)
                {
                    <div class="card mb-3 text-center">
                        <div class="card-body">
                            <h5 class="card-title">Perfil</h5>
                            <p class="card-text">Ver historial de Reservas</p>
                            @Html.ActionLink("Ir a Perfil", "ReservasPorUsuario", "Reservas", new { id = ViewBag.UserId }, new { @class = "btn btn-outline-dark" })
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>




</body>

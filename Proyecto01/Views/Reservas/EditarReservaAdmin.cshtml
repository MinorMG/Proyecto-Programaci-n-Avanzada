@model Proyecto01.Models.Reserva

@{
    ViewBag.Title = "editarReservaAdmin";
}

<h2 class="text-center">Editar Reserva</h2>
<div class="container d-flex justify-content-center">
    <div class="justify-content-center" style="max-width: 600px;">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Reservas</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IdReserva)
                @Html.HiddenFor(model => model.IdUsuario)
                @Html.HiddenFor(model => model.IdSala)



                <div class="form-group">
                    Fecha Reserva
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.FechaReserva, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                        @Html.ValidationMessageFor(model => model.FechaReserva, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Hora Inicio
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.HoraInicio, new { htmlAttributes = new { @class = "form-control", type = "time" } })
                    </div>
                </div>

                <div class="form-group">
                    Hora Fin
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.HoraFin, new { htmlAttributes = new { @class = "form-control", type = "time" } })
                        @Html.ValidationMessageFor(model => model.HoraFin, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Estado
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.Aprobacion, new SelectList(new[] { "Aprobado", "Pendiente" }), "Seleccione un Estado", new { @class = "form-control", @name = "aprobacion" })
                        @Html.ValidationMessageFor(model => model.Aprobacion, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Guardar Cambios" class="btn btn-outline-success" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Regresar", "listaReservas", new { }, new { @class = "btn btn-outline-primary" })
        </div>
    </div>
</div>

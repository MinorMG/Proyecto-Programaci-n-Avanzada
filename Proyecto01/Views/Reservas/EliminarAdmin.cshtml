@model Proyecto01.Models.Reserva

@{
    ViewBag.Title = "Eliminar";
}



<h3 class="text-center">¿Está seguro de eliminar tu reserva?</h3>
<div class="container d-flex justify-content-center">
    <div class="justify-content-center" style="max-width: 600px;">

        <hr />
        <dl class="dl-horizontal">
            <dt>
                Fecha Reserva
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FechaReserva)
            </dd>

            <dt>
                Hora Inicio
            </dt>

            <dd>
                @Html.DisplayFor(model => model.HoraInicio)
            </dd>

            <dt>
                Hora De Fin
            </dt>

            <dd>
                @Html.DisplayFor(model => model.HoraFin)
            </dd>

            <dt>
                Estado
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Aprobacion)
            </dd>

            <dt>
                Nombre Sala
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Sala.Nombre)
            </dd>

            <dt>
                Nombre Usuario
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Usuario.UserName)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color py-4 text-center">
                <input type="submit" value="Eliminar" class="btn btn-outline-danger" /> |
                @Html.ActionLink("Regresar", "ReservasPorUsuario", "Reservas", new { id = ViewBag.UserId }, new { @class = "btn btn-outline-primary" })
            </div>
        }
    </div>
</div>

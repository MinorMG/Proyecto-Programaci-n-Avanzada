@model Proyecto01.Models.Reserva

@{
    ViewBag.Title = "Agregar Reserva";
}

<h2 class="text-center">Agregar Reserva</h2>

<div class="card mx-auto" style="max-width: 600px; margin-top: 50px;">
    <div class="card-header">
        <h4 class="text-center">Reservas</h4>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card-body d-flex flex-column align-items-center PY-4">
            @Html.ValidationSummary(true, "", new { @class = "text-danger text-center" })

            <div class="form-group text-center col-md-6 my-2">
                <label>Sala de Reunión</label>
                @Html.DropDownListFor(model => model.id_sala, new SelectList(ViewBag.Salas, "id_sala", "nombre"), "Seleccione una sala", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_sala, "", new { @class = "text-danger" })
            </div>

            <div class="form-group text-center col-md-6 my-2">
                <label>Usuario</label>
                @Html.DropDownListFor(model => model.id_usuario, new SelectList(ViewBag.Usuarios, "id_usuario", "nombre"), "Seleccione un usuario", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_usuario, "", new { @class = "text-danger" })
            </div>

            <div class="form-group text-center col-md-6 my-2">
                <label>Fecha Reserva</label>
                @Html.EditorFor(model => model.fecha_reserva, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                @Html.ValidationMessageFor(model => model.fecha_reserva, "", new { @class = "text-danger" })
            </div>

            <div class="form-group text-center col-md-6 my-2">
                <label>Hora Inicio</label>
                @Html.EditorFor(model => model.hora_inicio, new { htmlAttributes = new { @class = "form-control", type = "time" } })
                @Html.ValidationMessageFor(model => model.hora_inicio, "", new { @class = "text-danger" })
            </div>

            <div class="form-group text-center col-md-6 my-2">
                <label>Hora Fin</label>
                @Html.EditorFor(model => model.hora_fin, new { htmlAttributes = new { @class = "form-control", type = "time" } })
                @Html.ValidationMessageFor(model => model.hora_fin, "", new { @class = "text-danger" })
            </div>

            <div class="form-group text-center col-md-6 my-2">
                <label>Estado</label>
                @Html.DropDownListFor(model => model.aprobacion, new SelectList(new[] { "Aprobado", "Pendiente" }), "Seleccione un Estado", new { @class = "form-control", @name = "aprobacion" })
                @Html.ValidationMessageFor(model => model.aprobacion, "", new { @class = "text-danger" })
            </div>

            <div class="form-group text-center my-4 col-md-6">
                <input type="submit" value="Crear Reserva" class="btn btn-outline-success w-100" />
            </div>
        </div>
    }
    <div class="card-footer text-center">
        @Html.ActionLink("Regresar", "listaReservas", new { }, new { @class = "btn btn-outline-warning" })
    </div>
</div>

@model IEnumerable<Proyecto01.Models.Reserva>
/*el item no se esta trayendo los valores*/
@{
    ViewBag.Title = "FiltrarReservasXSala";
}

<h2 class="my-5">Lista de Reservas Por Sala</h2>

@if (Model == null || !Model.Any())
{


    <div class="container col-6 my-4">
        <div class="justify-content-center">
            <h2>No hay reservas en esta sala.</h2>
        </div>
    </div>
    <div>
        @Html.ActionLink("Regresar", "listaReservas", new { }, new { @class = "btn btn-outline-warning" })
    </div>
}
else
{

    <table class="table table-striped table-hover table-borderless">
        <tr style="background-color:lightslategrey">
            <th class="text-white">
                Fecha Reserva
            </th>
            <th class="text-white">
                Hora Inicio
            </th>
            <th class="text-white">
                Hora Fin
            </th>
            <th class="text-white">
                Estado
            </th>
            <th class="text-white">
                Nombre Sala
            </th>
            <th class="text-white">
                Nombre Usuario
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaReserva)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoraInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoraFin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Aprobacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sala.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.UserName)
                </td>
                <td>
                    @if (item.FechaReserva >= DateTime.Now.Date)
                    {
                        @Html.ActionLink("Editar", "EditarReservaAdmin", new { id = item.IdReserva }, new { @class = "btn btn-outline-success mx-4" })
                        @Html.ActionLink("Eliminar", "EliminarAdmin", new { id = item.IdReserva }, new { @class = "btn btn-outline-danger" })
                    }
                </td>
            </tr>
        }

    </table>

    <div>
        @Html.ActionLink("Regresar", "listaReservas", new { }, new { @class = "btn btn-outline-warning" })
    </div>
}
